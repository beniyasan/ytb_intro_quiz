# Database
DATABASE_URL="postgresql://ytb_quiz_user:ytb_quiz_pass@localhost:5432/ytb_quiz_db"

# JWT Secrets (Use strong random values in production)
JWT_ACCESS_SECRET="your-super-secret-jwt-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-change-in-production"

# Encryption Key (32 bytes hex - use crypto.randomBytes(32).toString('hex'))
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-change-in-production"

# Session Secret
SESSION_SECRET="your-session-secret-change-in-production"

# Application
NODE_ENV="development"
PORT="3001"
API_VERSION="v1"

# CORS Origins (comma separated)
CORS_ORIGINS="http://localhost:3000,https://app.yiq.example.com"

# Rate Limiting
GLOBAL_RATE_LIMIT="100"
AUTH_RATE_LIMIT="5"

# Password Policy
PASSWORD_MIN_LENGTH="8"
BCRYPT_ROUNDS="12"
PASSWORD_HISTORY_COUNT="5"

# JWT Expiration
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"